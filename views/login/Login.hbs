<main>
    <div class="contain" id="container">
		<div class="form-container sign-up-container">
			<form action="/register-user" enctype="multipart/form-data" method="post">
				<h1>Create Account</h1>
				<span>or use your email for registration</span>
				<input type="text" placeholder="Name" name="Name" required/>
				<input type="text" placeholder="Apellido" name="apellido" required />
				<input type="text" placeholder="Telefono" name="tel" required/>
				<input type="file" placeholder="Foto de perfil" name="photo" required/>
				<input type="email" placeholder="Email" name="Email" required/>
				<input type="text" placeholder="Nombre de usuario" name="userName" required/>
				<input type="password" placeholder="Password" name="pass" required/>
				<input type="password" placeholder="Confirm Password" name="confirmationpass" required/>
				<button type="submit">Sign Up</button>
			</form>
		</div>
		<div class="form-container sign-in-container">
			<form action="/loggedIn" method="post">
				<h1>Sign in</h1>
				<input type="text" placeholder="Nombre de usuario" name="email" required/>
				<input type="password" placeholder="Password" name="pass" required/>
				
				<a href="/forgot-password">Forgot your password?</a>
				<button type="submit">Sign In</button>
			</form>
		</div>
		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-left">
					<h1>Welcome Back!</h1>
					<p>To keep connected with us please login with your personal info</p>
					<button class="ghost" id="signIn">Sign In</button>
				</div>
				<div class="overlay-panel overlay-right">
					<h1>Hello, Friend!</h1>
					<p>Enter your personal details and start journey with us</p>
					<button class="ghost" id="signUp">Sign Up</button>
				</div>
			</div>
		</div>
	</div>

</main>